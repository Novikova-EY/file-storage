                        <TextField fx:id="currentAuthorizedClient" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#currentAuthorizedClient" prefHeight="27.0" prefWidth="502.0" promptText="currentAuthorizedClient" />
